<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.java2.yahoohavadurumuuyg.MainActivity"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sıcaklık"
        android:id="@+id/txtSicaklik"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#000000"
        android:layout_below="@+id/webView"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Durum"
        android:id="@+id/txtDurum"
        android:textColor="#000000"
        android:layout_below="@+id/txtSicaklik"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Yer"
        android:id="@+id/txtYer"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/txtDurum"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yahoo_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/txtSehir"
        android:layout_alignParentTop="true"
        android:text="istanbul"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="ARA"
        android:id="@+id/button"
        android:textSize="17dp"
        android:onClick="getir"
        android:layout_below="@+id/txtSehir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#969696"
        android:textColor="#ffffff" />

    <WebView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/webView"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
